{
  "name": "BrightAuthor",
  "version": "0.10.0",
  "description": "BrightAuthor Connected",
  "homepage": "https://github.com/ostosh",
  "author": "Geoffrey J Ostosh <gostosh@brightsign.biz>",
  "main": "main.js",
  "scripts": {
    "pre-package": "node -r babel-register bin/stage",
    "package-mac": "npm run pre-package && build --m --x64",
    "package-windows": "npm run pre-package && build --w --x64",
    "package-linux": "npm run pre-package && build --l --x64",
    "package-all": "npm run pre-package && build -mwl --x64",
    "publish-all": "npm run pre-package && build -mwl --x64 -p always",
    "publish-mac": "npm run pre-package && build -m -p always",
    "publish-windows": "npm run pre-package && build -w --x64 -p always",
    "publish-linux": "npm run pre-package && build -l -p always"
  },
  "build": {
    "publish": [
      { 
        "provider": "github",
        "repo": "61EB1CFC18554D5A974E91B928605FD1",
        "owner": "jenkinsbs"
      }
	],
    "directories": {
      "buildResources": "app/resources",
      "app": "stage",
      "output": "release"
    },
    "extraResources": [
      {
        "from": "app/bin/${os}-${arch}",
        "to": "bin"
      },
      {
        "from": "app/tmp",
        "to": "tmp"
      }
    ],
    "productName": "BrightAuthor",
    "appId": "com.brightsign.BrightAuthor",
    "forceCodeSigning": false,
    "mac": {
      "category": "public.app-category.tools",
      "target": [
        "zip",
        "dmg"
      ],
	  "entitlements": "build/entitlements.mac.plist",
      "type": "distribution",
      "icon": "app/resources/icon.icns"
    },
	"mas": {
	  "entitlements": "build/entitlements.mas.plist",
      "type": "distribution",
      "category": "public.app-category.tools"
	},
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "publisherName": "baconcert",
      "certificateFile": "app/resources/baconcert.pfx",
      "certificatePassword": "bacon",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "maintainer": "Geoffrey J Ostosh",
      "category": "Building",
      "icon": "app/resources",
      "target": [
        "zip",
        "deb"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "uninstallerIcon": "uninstallerIcon.ico",
      "perMachine": true
    },
    "fileAssociations": [
      {
        "ext": "bpf",
        "name": "BrightAuthor Presentation File",
        "description": "BrightAuthor Presentation File"
      },
      {
        "ext": "bpfx",
        "name": "BrightAuthor Presentation File",
        "description": "BrightAuthor Presentation File"
      }
    ]
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "devDependencies": {
    "asar": "^0.12.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "electron": "1.7.11",
    "electron-builder": "19.56.0",
    "electron-debug": "^1.0.1",
    "fs-extra": "^4.0.2"
  },
  "devEngines": {
    "node": "7.9.0",
    "npm": "4.2.0"
  }
}
